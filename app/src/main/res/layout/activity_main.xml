<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.emery.test.zxing.MainActivity">

    <EditText
        android:id="@+id/create_qr_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="二维码的内容"/>

    <CheckBox
        android:id="@+id/create_qr_addLogo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="添加logo"/>

    <Button
        android:id="@+id/create_qr_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="生成二维码"/>

    <Button
        android:id="@+id/goto_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转webviwe"/>

    <ImageView
        android:id="@+id/create_qr_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#f00"/>
</LinearLayout>
